+++ git/configure.ac	2016-04-29 19:50:19.000000000 +0200
@@ -106,7 +106,7 @@
   AC_SUBST(SVN_APRUTIL_LIBS)
   SVN_APR_MAJOR_VERSION=2
 else
-  svn_lib_ver=0
+  svn_lib_ver=1
   APU_VER_REGEXES=["1\.[3-9]\."]
   SVN_LIB_APRUTIL($APU_VER_REGEXES)
   SVN_APR_MAJOR_VERSION=1
